<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView style="@style/Style_Black_TextView_Title"
		android:text="@string/label_colorPicker" android:layout_gravity="center_horizontal"/>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="match_parent">
		<ListView android:id="@+id/listView_colorPicker_left"
			android:layout_height="match_parent" android:layout_width="125dp" android:cacheColorHint="#00000000">
		</ListView>
		<ListView android:id="@+id/listView_colorPicker_right"
			android:layout_height="match_parent" android:layout_width="125dp" android:cacheColorHint="#00000000">
		</ListView>
	</LinearLayout>

</LinearLayout>
